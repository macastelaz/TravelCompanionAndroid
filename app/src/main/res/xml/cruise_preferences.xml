<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.castelcode.travelcompanion.tile_activities.CruiseSettings"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:weightSum="2">
    <com.castelcode.travelcompanion.preferences.DatePreference
        android:key="@string/date_key"
        android:title="@string/date_title"
        android:summary="@string/date_summary"
        android:layout="@layout/custom_preference"/>
    <com.castelcode.travelcompanion.preferences.TimePreference
        android:key="@string/time_key"
        android:title="@string/time_title"
        android:summary="@string/time_summary"
        android:layout="@layout/custom_preference"
        />
    <Preference
        android:key="@string/notification_preferences_key"
        android:title="@string/notification_preferences_title"
        android:summary="@string/notification_preferences_summary"
        android:layout="@layout/custom_preference"/>
    <Preference
        android:key="@string/drink_prices_preferences_key"
        android:title="@string/drink_prices_preferences_title"
        android:summary="@string/drink_prices_preferences_summary"
        android:layout="@layout/custom_preference"/>
    <Preference
        android:key="@string/trip_save_key"
        android:title="@string/trip_save_title"
        android:summary="@string/trip_save_summary"
        android:layout="@layout/custom_preference"/>
    <Preference
        android:key="@string/trip_load_key"
        android:title="@string/trip_load_title"
        android:summary="@string/trip_load_summary"
        android:layout="@layout/custom_preference"/>
    <Preference
        android:key="@string/trip_delete_key"
        android:title="@string/trip_delete_title"
        android:summary="@string/trip_delete_summary"
        android:layout="@layout/custom_preference"/>
    <Preference
        android:key="@string/trip_reset_key"
        android:title="@string/trip_reset_title"
        android:summary="@string/trip_reset_summary"
        android:layout="@layout/custom_preference"/>
</PreferenceScreen>
