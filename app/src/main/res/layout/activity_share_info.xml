<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.castelcode.travelcompanion.share_activity.ShareCruiseItem"
    android:weightSum="3">

    <TextView
        android:id="@+id/share_item_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:textColor="@color/textColor"
        android:background="@android:color/black"
        android:textAlignment="center"
        android:textSize="16sp"
        android:paddingTop="10dip"/>

    <ListView
        android:id="@+id/bluetooth_devices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:background="@android:color/black"
        android:padding="10dip"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/black"
        android:layout_weight=".35">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:background="@android:color/black"
                android:textColor="@color/textColor"
                android:padding="10dip"
                android:text="@string/share_information"/>

            <Button
                android:id="@+id/share_via_email_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/email" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
